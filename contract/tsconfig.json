{
  "compilerOptions": {
    "target": "esnext",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowJs": true,
    "checkJs": true,
    "allowSyntheticDefaultImports": true,
    "strict": false,
    "downlevelIteration": true,
    "strictNullChecks": true,
    "noImplicitThis": true,
    "noEmit": true,
    "typeRoots": ["./src/types.js", "./test/types.js"]
  },
  "include": [
    "*.js",
    "scripts/**/*.js",
    "src/**/*.js",
    "test/**/*.js",
    "tools/**/*.js"
  ]
}
